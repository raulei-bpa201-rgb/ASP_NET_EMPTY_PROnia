@using WebApplicationTASK14.Models
@model List<Category>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bordered table</h4>
            <p class="card-description">
                Add class <code>.table-bordered</code>
            </p>
            <div class="table-responsive pt-3">
                <a asp-controller="catagory" asp-action="create" class="btn btn-success m-3">Add Product</a>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                First name
                            </th>
                            <th>
                                Progress
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Deadline
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach(Category category in Model)
                        {
                            <tr>
                                <td>
                                    @category.Id
                                </td>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    @category.IsDeleted
                                </td>
                                <td>
                                    @category.CreatedAt
                                </td>
                                <td>
                                    <a asp-controller="Catagory" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                    <a asp-controller="Catagory" asp-action="Detail" asp-route-id="@category.Id" class="btn btn-primary">Detail</a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
